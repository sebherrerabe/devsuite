{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "outDir": "_generated",
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["_generated", "node_modules"]
}
